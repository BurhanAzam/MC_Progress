<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".planetsActivity"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ViewFlipper
            android:id="@+id/flipper2"
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_height="280dp" >

        </ViewFlipper>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/planetsdescription"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="clickplay"
            android:textSize="25sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fff"
            android:text="Play" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/planetsdescription2"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:onClick="clickpause"
            android:background="@drawable/rounded_button"
            android:textColor="#fff"
            android:text="Pause" />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/planetsdescription3"
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:onClick="clickstop"
            android:textSize="25sp"
            android:background="@drawable/rounded_button"
            android:textColor="#fff"
            android:text="Stop" />



    </LinearLayout>


</LinearLayout>